{
  "compilerOptions": {
    "outDir": "dist",
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "sourceMap": true,
    "lib": [
      "es6",
      "dom",
      "esnext.asynciterable",
      "es2017.object",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "components": [
        "src/components/index.ts"
      ],
      "helpers/*": [
        "src/helpers/*"
      ],
      "helpers": [
        "src/helpers/index.ts"
      ],
      "constants/*": [
        "src/constants/*"
      ],
      "constants": [
        "src/constants/index.ts"
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "pages": [
        "src/pages/index.ts"
      ]
    }
  },
  "types": [
    "react",
    "react-dom"
  ],
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}
